@model Zero_Hunger.db.dbNGO_List
@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>NGO Signup</h2>





<style>
    .error {
        color: red;
    }
</style>


@using (Html.BeginForm("Signup", "Ngo", FormMethod.Post))
{

<div class="container">
    <div class="form-group">
        <label>Name</label>
        @Html.ValidationMessageFor(x => x.NGO_NAME, "", new { @class = "error" })
        @Html.TextBoxFor(x => x.NGO_NAME, new { @class = "form-control" })

    </div>
</div>

<br />
<br />
<br />
<br />
<br />
<div class="container">
    <div class="form-group">
        <label>Password</label>
        @Html.ValidationMessageFor(x => x.password, "", new { @class = "error" })
        @Html.PasswordFor(x => x.password, new { @class = "form-control" })
    </div>
</div>

<br />
<br />
<div class="container">
    <button type="submit" class="btn btn-primary">Submit</button>
   <a href="Login" >Already Have account? Login</a>
</div>

<br />
<br />
<div class="container">
    <label>@ViewBag.Notification</label>

</div>


}

