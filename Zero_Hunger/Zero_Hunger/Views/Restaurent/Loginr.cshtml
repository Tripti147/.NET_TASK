@model Zero_Hunger.db.dbRESTAURENT_List
@{
    ViewBag.Title = "Loginr";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Loginr</h2>



<style>
    .error {
        color: red;
    }
</style>


@using (Html.BeginForm("Loginr", "Restaurent", FormMethod.Post))
{
    @Html.AntiForgeryToken();

    <div class="container">
        <div class="form-group">
            <label>Name</label>
            @Html.ValidationMessageFor(x => x.RESTAURENT_NAME, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.RESTAURENT_NAME, new { @class = "form-control" })

        </div>
    </div>

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <div class="container">
        <div class="form-group">
            <label>Password</label>
            @Html.ValidationMessageFor(x => x.password, "", new { @class = "error" })
            @Html.PasswordFor(x => x.password, new { @class = "form-control" })
        </div>
    </div>

    <br />
    <br />
    <div class="container">
        <button type="submit" class="btn btn-primary">Login</button>
        <a href="Signupr">Don't have any account? Login</a>
    </div>

    <br />
    <br />
    <div class="container">
        <label>@ViewBag.Notification</label>

    </div>


}

