@model Zero_Hunger.db.dbEMPLOYEE_List
@{
    ViewBag.Title = "Signupe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Signupe</h2>




<style>
    .error {
        color: red;
    }
</style>


@using (Html.BeginForm("Signupe", "Employee", FormMethod.Post))
{

    <div class="container">
        <div class="form-group">
            <label>Name</label>
            @Html.ValidationMessageFor(x => x.EMPLOYEE_NAME, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.EMPLOYEE_NAME, new { @class = "form-control" })

        </div>
    </div>

    <div class="container">
        <div class="form-group">
            <label>Password</label>
            @Html.ValidationMessageFor(x => x.password, "", new { @class = "error" })
            @Html.PasswordFor(x => x.password, new { @class = "form-control" })
        </div>
    </div>

    <br />
    <br />
    <div class="container">
        <button type="submit" class="btn btn-primary">Submit</button>
        <<a href="Logine">Don't have any account? Login</a>

    </div>

    <br />
    <br />
    <div class="container">
        <label>@ViewBag.Notification</label>

    </div>


}

